<%- include('partials/header') %>

<div class="container">
    <h1>Help Others Find Their Soulmates</h1>
    <div class="card">
      <div class="card-body">
        <form action="/makeapost" method="post">
          <div class="form-row">
            <div class="form-group">
              <label>Cat/Dog?</label>
              <select name="typeOfAnimal" class="form-control">
                <option>Cat</option>
                <option>Dog</option>
              </select>
            </div>
            <div class="form-group">
              <label>Name</label>
              <input type="text" name="animalName" class="form-control">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Sex</label>
              <select name="sex" class="form-control">
                <option>Female</option>
                <option>Male</option>
              </select>
            </div>
            <div class="form-group">
              <label>Breed</label>
              <input type="text" name="breed" class="form-control">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Age</label>
              <input type="text" name="age" class="form-control">
            </div>
            <div class="form-group">
              <label>Behaviour</label>
              <input type="text" name="behaviour" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea name="description" rows="1" class="form-control"></textarea>
          </div>
          <div class="form-group">
            <label>Reason for adoption</label>
            <textarea name="reason" rows="2" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-dark">Add Post</button>
        </form>
      </div>
    </div>
  </div>

<%- include('partials/footer') %>

<style>
    

  .container {
    max-width: 600px;
    margin-top: 10px;
    padding: 0 15px;
  }

  h1 {
    text-align: center;
    margin-bottom: 0px;
  }

  .card {
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 5px;
  }

  label {
    font-weight: bold;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-control {
    border-radius: 5px;
  }

  .btn-dark {
    border-radius: 5px;
  }

  .form-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .form-row .form-group {
    flex: 1;
    margin-right: 10px;
  }

  @media (max-width: 576px) {
    .form-row {
      flex-direction: column;
    }

    .form-row .form-group {
      margin-right: 0;
      margin-bottom: 10px;
    }
  }
    
  </style>
