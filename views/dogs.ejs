<%- include('partials/header') %>

  <% if (successMessage) { %>
    <div class="success-message">
      <%= successMessage %>
    </div>
    <% } else { %>
      <div id="title">
        <h1>Choose your future best friend</h1>
        <h2>Available Dogs</h2>
      </div>
      <form style="padding-left: 25px;" action="/dogs" method="GET" class="search-form">
        <input type="text" name="breed" placeholder="Search by breed">
        <button type="submit" class="btn btn-dark">Search</button>
      </form>
      <div class="dog-gallery">
        <% dogs.forEach(function(dog) { %>

          <div class="dog-card">
            <h3>
              <%= dog.name %>
            </h3>
            <p><strong>Breed:</strong>
              <%= dog.breed %>
            </p>
            <a class="btn btn-info" role="button" href="/dogs/<%= dog._id %>">See details</a>
          </div>

          <% }); %>
      </div>

      <div class="foster-section">
        <p>If you would like to be a foster for the dogs until they find their forever home, follow the instructions
          below:</p>
        <form action="/dogs" method="POST">
          <input type="email" name="email" placeholder="Your email" required>
          <input type="tel" name="phone" placeholder="Your phone number" required>
          <button type="submit" class="btn btn-danger">Foster</button>
        </form>
      </div>

      </div>
      <% } %>
        <%- include('partials/footer') %>



          <style>
            h1 {
              display: flex;
              align-items: center;
              justify-content: center;
            }

            h2 {
              display: flex;
              align-items: center;
              justify-content: center;
            }

            .dog-gallery {
              display: grid;
              grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
              grid-gap: 20px;
            }

            .dog-card {
              border: 1px solid #ccc;
              border-radius: 5px;
              padding: 15px;
              text-align: center;
            }


            .dog-card h3 {
              margin-top: 10px;
              text-align: center;
            }

            .dog-card p {
              margin-bottom: 10px;
            }

            .dog-card button {
              background-color: #555b62;
              color: #fff;
              border: none;
              padding: 8px 15px;
              border-radius: 5px;
              cursor: pointer;
            }

            .dog-card button:hover {
              background-color: #737b83;
            }


            .foster-section {
              margin-top: 30px;
              text-align: center;
            }

            .foster-section p {
              margin-bottom: 10px;
            }

            .foster-section input {
              margin-right: 5px;
              margin-bottom: 10px;
              padding: 5px;
            }

            .foster-section button {
              background-color: #dc3545;
              color: #fff;
              border: none;
              padding: 8px 15px;
              border-radius: 5px;
              cursor: pointer;
            }

            .foster-section button:hover {
              background-color: #c82333;
            }
          </style>